@model MyBlog.WebUI.Models.Contact.ContactViewModel

<div class="container">

    <div class="section-title">
        <h2>Bana ulaşın</h2>
    </div>

    <div class="row mt-2">

        <div class="col-md-6 d-flex align-items-stretch">
            <div class="info-box">
                <i class="bx bx-map"></i>
                <h3>Adres</h3>
                <p>Kartepe,KOCAELİ</p>
            </div>
        </div>

        <div class="col-md-6 mt-4 mt-md-0 d-flex align-items-stretch">
            <div class="info-box">
                <i class="bx bx-share-alt"></i>
                <h3>Sosyal Linkler</h3>
                <div class="social-links">
                    <a href="https://github.com/recaiozturk" target="_blank" class="twitter">
                        <i class="bi bi-github"></i>
                    </a>

                    <a href="https://www.linkedin.com/in/recaiozturk54/" target="_blank" class="linkedin">
                        <i class="bi bi-linkedin"></i>
                    </a>
                    <a href="https://medium.com/@@recaiozturk54" target="_blank" class="medium">
                        <i class="bi bi-medium"></i>
                    </a>
                    <a href="https://www.instagram.com/recaiozturk54/" target="_blank" class="instagram">
                        <i class="bi bi-instagram"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mt-4 d-flex align-items-stretch">
            <div class="info-box">
                <i class="bx bx-envelope"></i>
                <h3>Email</h3>
                <p>recaiozturk54@gmail.com</p>
            </div>
        </div>
        <div class="col-md-6 mt-4 d-flex align-items-stretch">
            <div class="info-box">
                <i class="bx bx-phone-call"></i>
                <h3>Telefon</h3>
                <p>0 531 740 41 48</p>
            </div>
        </div>
    </div>

    <form id="contactForm" method="post" role="form" class="php-email-form mt-4" novalidate>
        <div class="row">
            <div id="contact-error"></div>
            <div class="col-md-6 form-group">
                <label class="form-label">İsim:</label>
                <input asp-for="@Model.ContactFormViewModel.Name" class="form-control" placeholder="İsminiz">
            </div>
            <div class="col-md-6 form-group mt-3 mt-md-0">
                <label class="form-label">Email:</label>
                <input asp-for="@Model.ContactFormViewModel.Email" class="form-control" placeholder="Mail Adresiniz">
            </div>
        </div>
        <div class="form-group mt-3">
            <label class="form-label">Konu:</label>
            <input asp-for="@Model.ContactFormViewModel.Subject" class="form-control" placeholder="Konu">
        </div>
        <div class="form-group mt-3">
            <label class="form-label">Mesaj:</label>
            <textarea asp-for="@Model.ContactFormViewModel.Message" class="form-control" rows="5" placeholder="Mesajınız"></textarea>
        </div>
        <div class="my-3">
            <div id="spinner" class="loading">Gönderiliyor</div>
        </div>
        <div class="text-center"><button class="btn btn-success" onclick="SendMessage()" type="button">Gönder</button></div>
    </form>

</div>

<script src="~/js/Contact/Contact.js"></script>
