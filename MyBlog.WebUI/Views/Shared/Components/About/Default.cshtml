@model AboutViewModel

<div class="about-me container">

    <div class="section-title">
        <h2>Hakkımda</h2>
    </div>
    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("admin"))
    {
        <a href="/about/edit" target="_blank" class="btn btn-success btn-sm my-3">Düzenle</a>
    }
    <div class="row">
        <div class="col-lg-4" data-aos="fade-right">
            <img src="~/img/profilepicture/@Model.Image" style="width:300px" class="img-fluid" alt="">
        </div>
        <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
            <h3 class="mb-3">@Model.Title</h3>
            <div class="row">
                <div class="col-lg-6">
                    <ul>

                        <li>
                            <i class="bi bi-chevron-right"></i> <strong>Tel:</strong>
                            <span>
                                @Model.PhoneNumber
                            </span>
                        </li>
                        <li>
                            <i class="bi bi-chevron-right"></i> <strong>Website:</strong>
                            <span>@Model.Website</span>
                        </li>
                        <li>
                            <i class="bi bi-chevron-right"></i> <strong>Adres:</strong>
                            <span>
                                @Model.Adress
                            </span>
                        </li>

                    </ul>
                </div>
                <div class="col-lg-6">
                    <ul>
                        <li>
                            <i class="bi bi-chevron-right"></i> <strong>Doğum Tarihi:</strong>
                            <span>
                                @Model.Birthday.ToString("dd/MM/yyyy")
                            </span>
                        </li>
                        <li>
                            <i class="bi bi-chevron-right"></i> <strong>Mail:</strong>
                            <span>@Model.Email</span>
                        </li>

                    </ul>
                </div>
            </div>
            <p>
                @Model.Summary
            </p>
        </div>
    </div>

</div>
<!-- End About Me -->
<!-- ======= Skills  ======= -->
<div class="skills container">

    <div class="section-title">
        <h2>Yetenekler</h2>
    </div>

    <div class="row skills-content">

        @for (int i = 0; i < Model.Skills.Count; i += 2)
        {

            <div class="col-lg-6">

                <div class="progress">
                    <span class="skill">@Model.Skills[i].SkillName <i class="val">@Model.Skills[i].SkillValue%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="@Model.Skills[i].SkillValue" aria-valuemin="0"
                             aria-valuemax="100"></div>
                    </div>
                </div>

            </div>
            @if (i + 1 < Model.Skills.Count)
            {
                <div class="col-lg-6">

                    <div class="progress">
                        <span class="skill">@Model.Skills[i + 1].SkillName <i class="val">@Model.Skills[i + 1].SkillValue%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@Model.Skills[i + 1].SkillValue" aria-valuemin="0"
                                 aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
<!-- End Skills -->

<!-- ======= Counts ======= -->
<div class="counts container">
    <div class="section-title mb-5">
        <h2>Favori Film,Kitap,Dizi,Müzik</h2>
    </div>
    <div class="row">

        <div class="col-lg-3 col-md-6">
            <div class="count-box">
                <i class="bi bi-film"></i>
                <p>Favori Film :</p>
                <strong>@Model.FavoriteMovie</strong>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mt-5 mt-md-0">
            <div class="count-box">
                <i class="bi bi-journal-richtext"></i>
                <p>Favori Kitap :</p>
                <strong>@Model.FavoriteBook</strong>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mt-5 mt-lg-0">
            <div class="count-box">
                <i class="bi bi-film"></i>
                <p>Favori Dizi :</p>
                <strong>@Model.FavoriteSerie</strong>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mt-5 mt-lg-0">
            <div class="count-box">
                <i class="bi bi-headset"></i>
                <p>Favori Müzik :</p>
                <strong>@Model.FavoriteMusic</strong>
            </div>
        </div>

    </div>

</div>
    <!-- End Counts -->