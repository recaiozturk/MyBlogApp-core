
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- smidge bundle start -->
    <environment names="Development">
        <link rel="stylesheet" href="my-admin-css-bundle" debug="true" />
    </environment>

    <environment names="Production">
        <link rel="stylesheet" href="my-admin-css-bundle" />
    </environment>

    <link rel="icon" type="image/png" href="icon/favicon-32x32.png" sizes="32x32">
    <link rel="apple-touch-icon" href="~/admin/icon/favicon-32x32.png">

    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="Dmitry Volkov">
    <title>AdminSide</title>
    <link href="~/css/site.css" rel="stylesheet">

    <link href="~/lib/froala_editor_4.1.4/css/froala_editor.pkgd.min.css" rel="stylesheet" />


</head>
<body>
    <header class="header">
        <div class="header__content">
            <a href="index.html" class="header__logo">
                <img src="~/admin/img/logo.svg" alt="">
            </a>
            <button class="header__btn" type="button">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </header>

    @if (User.Identity?.IsAuthenticated == true)
    {
        if (User.IsInRole("admin"))
        {
            <div class="sidebar">
                @*<a href="index.html" class="sidebar__logo">
                    <img src="~/admin/img/logo.svg" alt="">
                </a>*@
                <div class="sidebar__user">
                    @*<div class="sidebar__user-img">
                        <img src="~/admin/img/user.svg" alt="">
                    </div>*@

                    <div class="sidebar__user-title">
                        <span>@(User.IsInRole("admin") ? "admin" :"user")</span>
                        <p>@User.Identity.Name</p>
                    </div>

                    <a href="/" class="sidebar__user-btn" type="button">
                        <i class="icon ion-ios-log-out"></i>
                    </a>
                </div>
                <div class="sidebar__nav-wrap">
                    <ul class="sidebar__nav">
                        <li class="sidebar__nav-item">
                            <a href="/about/edit" class="sidebar__nav-link"><i class="icon ion-ios-keypad"></i> <span>About</span></a>
                        </li>
                        <li class="sidebar__nav-item">
                            <a class="sidebar__nav-link" data-toggle="collapse" href="#collapseMenu" role="button" aria-expanded="false" aria-controls="collapseMenu"><i class="icon ion-ios-copy"></i> <span>Resume</span> <i class="icon ion-md-arrow-dropdown"></i></a>

                            <ul class="collapse sidebar__menu" id="collapseMenu">
                                <li><a href="/resume/education">Education</a></li>
                                <li><a href="/resume/experiences">Experience</a></li>
                            </ul>
                        </li>

                        <li class="sidebar__nav-item">
                            <a href="/portfolio/index" class="sidebar__nav-link"><i class="icon ion-ios-keypad"></i> <span>Portfolio</span></a>
                        </li>
                        <li class="sidebar__nav-item">
                            <a href="/contact/index" class="sidebar__nav-link"><i class="icon ion-ios-keypad"></i> <span>Messages</span></a>
                        </li>
                        <li class="sidebar__nav-item">
                            <a href="/user/index" class="sidebar__nav-link"><i class="icon ion-ios-keypad"></i> <span>Users</span></a>
                        </li>
                        <li class="sidebar__nav-item">
                            <a href="/role/index" class="sidebar__nav-link"><i class="icon ion-ios-keypad"></i> <span>Roles</span></a>
                        </li>
                        <li class="sidebar__nav-item">
                            <a href="/account/logout" class="sidebar__nav-link"><i class="icon ion-ios-keypad"></i> <span>LogOut</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        }
    }

    <!-- main content -->
    <main class="main">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <environment names="Development">
        <script src="my-admin-js-bundle" debug="true"></script>
    </environment>

    <environment names="Production">
        <script src="my-admin-js-bundle"></script>
    </environment>


    <!-- froala editor -->
    <script src="~/lib/froala_editor_4.1.4/js/froala_editor.pkgd.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>