
@model MyBlog.WebUI.Models.Portfolio.PortfolioViewModel

@{
    ViewData["Title"] = "ExperienceEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="main__title">
            <h2>Create Exp (Edit)</h2>
        </div>
    </div>
    <div class="col-12">
        <form asp-controller="Portfolio" asp-action="CreateProject" method="post" class="form" novalidate>
            <div asp-validation-summary="ModelOnly" class="model-danger"></div>
            <div class="row row--form">
                <div class="col-12 col-md-7 form__content">
                    <div class="row row--form">
                        <div class="col-12">
                            <label asp-for="Title" class="form__label"></label>
                            <input asp-for="Title" class="form__input" placeholder="Title Giriniz">
                            <span asp-validation-for="Title" class="model-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="ProjectDate" class="form__label"></label>
                            <input asp-for="ProjectDate" class="form__input">
                            <span asp-validation-for="ProjectDate" class="model-danger"></span>
                        </div>
                        <div class="col-12 col-sm-6 col-lg-3">
                            <label asp-for="ProjectUrl" class="form__label"></label>
                            <input asp-for="ProjectUrl" class="form__input">
                            <span asp-validation-for="ProjectUrl" class="model-danger"></span>
                        </div>

                        <div class="col-12 col-sm-6 col-lg-3">
                            <label asp-for="UsedTechnologies" class="form__label"></label>
                            <input asp-for="UsedTechnologies" class="form__input">
                            <span asp-validation-for="UsedTechnologies" class="model-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Description" class="form__label"></label>
                            <textarea asp-for="Description" class="form__textarea" placeholder=""></textarea>
                            <span asp-validation-for="Description" class="model-danger"></span>
                        </div>

                        <div class="col-12">
                            @if (Model.Id > 0)
                            {
                                <label asp-for="ProjectImages" class="form__label"></label>
                                <a href="#modal-add-image" class="main__title-link opening_modal_add open-modal ml-0 mb-3">Add Image</a>

                                <div class="profile__content">
                                    <div class="profile__user">
                                        <div class="profile__avatar">
                                            <img src="img/user.svg" alt="">
                                        </div>
                                        <div class="profile__meta profile__meta--green">

                                            <span>HotFlix ID: 23562</span>
                                        </div>
                                    </div>

                                    <div class="profile__mobile-tabs" id="profile__mobile-tabs">
                                        <div class="profile__mobile-tabs-btn dropdown-toggle" role="navigation" id="mobile-tabs" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <input type="button" value="Profile">
                                            <span></span>
                                        </div>

                                        <div class="profile__mobile-tabs-menu dropdown-menu" aria-labelledby="mobile-tabs">
                                            <ul class="nav nav-tabs" role="tablist">
                                                <li class="nav-item" data-value="profile"><a class="nav-link active" id="1-tab" data-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1" aria-selected="true">Profile</a></li>

                                                <li class="nav-item" data-value="comments"><a class="nav-link" id="2-tab" data-toggle="tab" href="#tab-2" role="tab" aria-controls="tab-2" aria-selected="false">Comments</a></li>

                                                <li class="nav-item" data-value="reviews"><a class="nav-link" id="3-tab" data-toggle="tab" href="#tab-3" role="tab" aria-controls="tab-3" aria-selected="false">Reviews</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="profile__actions">
                                        <a href="#modal-status3" class="profile__action profile__action--banned open-modal"><i class="icon ion-ios-lock"></i></a>
                                        <a href="#modal-delete3" class="profile__action profile__action--delete open-modal"><i class="icon ion-ios-trash"></i></a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <h2 style="color: #f9ab00;">To add images, first create a portfolio</h2>
                            }


                        </div>
                        <div class="col-12">
                            <label asp-for="PortfolioType" class="form__label"></label>
                            <select class="js-example-basic-single" asp-for="PortfolioType">

                                <option value=""></option>
                                @foreach (var appType in Model.enumAppTypeList)
                                {
                                    <option value="@appType">@Enum.GetName(typeof(Enums.AppType), appType)</option>
                                }

                            </select>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <button type="submit" class="form__btn">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/Portfolio/Create/CreatePortfolio.js"></script>
}
